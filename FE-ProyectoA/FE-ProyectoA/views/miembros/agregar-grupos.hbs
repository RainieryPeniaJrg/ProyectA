<main>
    <div class="container">
  <div class="heading">Agregar Grupo</div>
  <form action="/agregar-grupo" method="POST" class="form">
    <div class="input-field">
      <label for="nombreGrupo">Nombre del Grupo:</label>
      <input type="text" id="nombreGrupo" name="nombreGrupo" required>
    </div>
    <div class="input-field select-field">
      
      <select id="dirigentesMultiplicadoresIds" name="dirigentesMultiplicadoresIds" required multiple>
        <option value="" disabled selected>Seleccione Dirigente Multiplicador</option>
           {{#each dirigente}}
        <option value="{{this.id}}">{{this.nombreCompleto}}</option>
    {{/each}}
    
      </select>
    </div>
    <div class="input-field select-field">
     
      <select id="subCoordinadoresIds" name="subCoordinadoresIds" required>
        <option value="" disabled selected>Seleccione Subcoordinador</option>
        {{#each subCoordinador}}
        <option value="{{this.id}}">{{this.nombreCompleto}}</option>
    {{/each}}
        
  
      </select>
    </div>
    <div class="input-field select-field">
     
      <select id="coordinadoresGeneralesIds" name="coordinadoresGeneralesIds" required>
        <option value="" disabled selected>Seleccione Coordinador General</option>
     {{#each coordinador}}
        <option value="{{this.id}}">{{this.nombreCompleto}}</option>
    {{/each}}
      </select>
    </div>
   
    <div class="btn-container">
      <button type="submit" class="btn">AÃ±adir Grupo</button>
      <button type="button" class="btn close">Cerrar</button>
    </div>
  </form>
</div>
</main>