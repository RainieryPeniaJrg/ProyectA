<main>
    <div class="container">
        <div class="heading">
            {{#if editMode}}
                Editar Coordinador
            {{else}}
                Agregar Coordinador
            {{/if}}
        </div>
        <div class="form-container">
            <form action="{{#if editMode}}/editar-coordinador{{else}}/registro{{/if}}" method="POST" class="form">
            {{#unless editMode}}
                <div class="input-field">
                    <input type="email" id="email" name="email" required value="{{coordinadores.email}}">
                    <label for="email">Correo Electrónico:</label>
                </div>
                 {{/unless}}
                {{#unless editMode}}
                <div class="input-field">
                    <input type="password" id="password" name="password" required>
                    <label for="password">Contraseña:</label>
                </div>
                <div class="input-field">
                    <input type="password" id="confirmPassword" name="confirmPassword" required>
                    <label for="confirmPassword">Confirmar Contraseña:</label>
                </div>
                {{/unless}}
                <div class="input-field">
                    <input type="text" id="nombre" name="nombre" required value="{{coordinadores.nombre}}">
                    <label for="nombre">Nombre:</label>
                </div>
                <div class="input-field">
                    <input type="text" id="apellido" name="apellido" required value="{{coordinador.apellido}}">
                    <label for="apellido">Apellido:</label>
                </div>
                <div class="input-field">
                    <input type="text" id="cedula" name="cedula" required value="{{coordinador.cedula}}">
                    <label for="cedula">Cédula:</label>
                </div>
                <div class="input-field">
                    <input type="text" id="numeroTelefono" name="numeroTelefono" required value="{{coordinador.numeroTelefono}}">
                    <label for="numeroTelefono">Número de Teléfono:</label>
                </div>
                <div class="input-field">
                    <input type="text" id="provincia" name="provincia" required value="{{coordinador.provincia}}">
                    <label for="provincia">Provincia:</label>
                </div>
                <div class="input-field">
                    <input type="text" id="sector" name="sector" required value="{{coordinador.sector}}">
                    <label for="sector">Sector:</label>
                </div>
                <div class="input-field">
                    <input type="number" id="casaElectoral" name="casaElectoral" required value="{{coordinador.casaElectoral}}">
                    <label for="casaElectoral">Casa Electoral:</label>
                </div>
                <input type="hidden" name="role" id="role" value="CoordinadorGeneral">
                {{#if editMode}}
                <input type="hidden" name="coordinadorId" value="{{coordinadorId}}">
                {{/if}}
                <div class="btn-container">
                    <button type="submit" class="btn">{{#if editMode}}Editar Coordinador{{else}}Registrar Coordinador{{/if}}</button>
                    <button type="button" class="btn close">Cerrar</button>
                </div>
            </form>
        </div>
    </div>
</main>