<main>
    <div class="container">
    <div class="heading">Registro de Usuario</div>
    <div class="form-container">
    <form action="/registro" method="POST" class="form">
        <div class="input-field">
             <input type="email" id="email" name="email" required>
            <label for="email">Correo Electrónico:</label>
           
        </div>
        <div class="input-field">
            <input type="password" id="password" name="password" required>
            <label for="password">Contraseña:</label>
            
        </div>
        <div class="input-field">
            <input type="text" id="nombre" name="nombre" required>
            <label for="nombre">Nombre:</label>
            
        </div>
        <div class="input-field">
            <input type="text" id="apellido" name="apellido" required>
            <label for="apellido">Apellido:</label>
            
        </div>
        <div class="input-field">
             <input type="text" id="cedula" name="cedula" required>
            <label for="cedula">Cédula:</label>
           
        </div>
        <div class="input-field">
            <input type="text" id="numeroTelefono" name="numeroTelefono" required>
            <label for="numeroTelefono">Número de Teléfono:</label>
            
        </div>
        <div class="input-field">
             <input type="text" id="provincia" name="provincia" required>
            <label for="provincia">Provincia:</label>
           
        </div>
        <div class="input-field">
              <input type="text" id="sector" name="sector" required>
            <label for="sector">Sector:</label>
          
        </div>
        <div class="input-field">
             <input type="number" id="casaElectoral" name="casaElectoral" required>
            <label for="casaElectoral">Casa Electoral:</label>
           
        </div>
        <div class="input-field">
               <input type="number" id="cantidadVotantes" name="cantidadVotantes" required>
            <label for="cantidadVotantes">Cantidad de Votantes:</label>
         
        </div>

        <div class="input-field">
             <input type="text" id="subCoordinadorId" name="subCoordinadorId" >
            <label for="subCoordinadorId">ID Subcoordinador:</label>
           
        </div>
        <div class="input-field">
            <input type="text" id="coordinadorGeneralId" name="coordinadorGeneralId" >
            <label for="coordinadorGeneralId">ID Coordinador General:</label>
            
        </div>
        <div class="input-field">
             <input type="text" id="dirigenteId" name="dirigenteId" >
            <label for="dirigenteId">ID Dirigente:</label>
           
        </div>
        <div class="input-field">
             <input type="password" id="confirmPassword" name="confirmPassword" required>
            <label for="confirmPassword">Confirmar Contraseña:</label>
           
        </div>
        <div class="input-field">
            <select id="role" name="role" required>
                <option value="" disabled selected>Seleccionar Rol</option>
                {{#each roles}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
                <option value="SubCoordinador">SubCoordinador</option>
                <option value="SubCoordinador">DirigenteMultiplicador</option>
                <option value="SubCoordinador">Director</option>
                

            </select>
        </div>
        <div class="btn-container">
            <button type="submit" class="btn">Registrarse</button>
            <button type="button" class="btn close">Cerrar</button>
        </div>
    </form>
    </div>
</div>
</main>